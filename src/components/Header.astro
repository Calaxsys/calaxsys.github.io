---
import { Picture } from "astro:assets";
import companyLogo from "../../src/images/parker-logo/logo_v1.svg";
---

<header class="header">
  <div class="header-container">
    <!--Logo is turned white in the css with a filter on dark mode-->
    <a href="" aria-label="back to home">
      <Picture
        src={companyLogo}
        alt="Parker Crest Web Design Logo"
        width="234"
        height="64"
        aria-hidden="true"
        loading="eager"
        decoding="async"
      />
    </a>
    <!--Navigation List-->
    <nav
      role="navigation"
      class="primary-navigation"
      id="primary-navigation"
      data-visible="false">
      <!--Mobile Nav Toggle-->
      <!-- <button aria-label="mobile menu toggle">
        <div aria-hidden="true"></div>
      </button> -->
      <div>
        <ul aria-expanded="false" class="primary-nav-ul" role="list">
          <li>
            <a href=""> Home </a>
          </li>
          <li>
            <a href=""> About </a>
          </li>
          <!--Copy and paste this cs-dropdown list item and replace any .cs-li with this cs-dropdown group to make a new dropdown and it will work-->
          <li tabindex="0">
            <span> Services </span>
            <ul class="nav-dropdown">
              <li>
                <a href="">Web Design</a>
              </li>
              <li>
                <a href="">Development</a>
              </li>
              <li>
                <a href="">SEO Optimization</a>
              </li>
            </ul>
          </li>
          <li>
            <a href=""> Blog </a>
          </li>
          <li>
            <a href=""> Contact </a>
          </li>
        </ul>
      </div>
    </nav>
    <div>
      <a href="tel:+1 980 565 5719" class="nav-phone">
        <img
          src="/src/svgs/phone-1a.svg"
          alt="logo"
          width="24"
          height="24"
          aria-hidden="true"
          decoding="async"
        />
        +1 980 565 5719
      </a>
    </div>

    <button id="dark-mode-toggle" aria-label="dark mode toggle">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 480 480"
        style="enable-background:new 0 0 480 480"
        xml:space="preserve"
        ><path
          d="M459.782 347.328c-4.288-5.28-11.488-7.232-17.824-4.96-17.76 6.368-37.024 9.632-57.312 9.632-97.056 0-176-78.976-176-176 0-58.4 28.832-112.768 77.12-145.472 5.472-3.712 8.096-10.4 6.624-16.832S285.638 2.4 279.078 1.44C271.59.352 264.134 0 256.646 0c-132.352 0-240 107.648-240 240s107.648 240 240 240c84 0 160.416-42.688 204.352-114.176 3.552-5.792 3.04-13.184-1.216-18.496z"
        ></path></svg
      >
      <img
        aria-hidden="true"
        src="https://csimg.nyc3.cdn.digitaloceanspaces.com/Icons%2Fsun.svg"
        decoding="async"
        alt="moon"
        width="15"
        height="15"
      />
    </button>
  </div>
</header>

<style>
  .header {
    display: flex;
    width: 80%;
    max-width: var(--max-width);
    margin-inline: auto;
  }

  .nav-dropdown {
    display: none;
  }

  .header-container {
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    width: 100%;
  }

  .primary-nav-ul {
    display: flex;
    gap: 1.5rem;
  }

  .nav-phone {
    display: flex;
    gap: 1rem;
  }
</style>

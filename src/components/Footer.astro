---
import Picture from "astro/components/Picture.astro";
import { Icon } from "astro-icon/components";

import footer_image from "../images/footer-img-2x.png";
import companyLogo from "../images/parker-logo/logo_v1_dark.svg";
---

<footer class="footer">
  <p class="footer-title">
    Ready to get started? <br />
    <span class="footer-subtitle">Letâ€™s Build Something Great Together!</span>
  </p>
  <Picture
    src={footer_image}
    alt="A Beautiful Website built by Jultera Web Designs on a small Laptop Screen"
    width="2160"
    height="2160"
    aria-hidden="true"
    loading="lazy"
    decoding="async"
    class="footer-img-container"
  />
  <a href="/" class="btn | cta-btn">Kickstart your Business</a>

  <Picture
    src={companyLogo}
    alt="Jultera Web Design Logo"
    width="234"
    height="64"
    aria-hidden="true"
    loading="lazy"
    decoding="async"
    class="footer-logo"
  />
  <p class="dev-cred">&copy; 2024 Jultera Web Designs. All Rights Reserved</p>
  <ul class="footer-socials" role="list">
    <li>
      <a href="/">
        <!-- <Icon name="facebook" /> -->
      </a>
    </li>
    <li>
      <!-- <a href="/"><Icon name="linkedin" /></a> -->
    </li>
    <li>
      <!-- <a href="/"><Icon name="github" /></a> -->
    </li>
  </ul>
  <div class="wave">
    <svg
      data-name="Layer 1"
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 1200 120"
      preserveAspectRatio="none">
      <path
        d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z"
        opacity=".25"
        class="shape-fill"></path>
      <path
        d="M0,0V15.81C13,36.92,27.64,56.86,47.69,72.05,99.41,111.27,165,111,224.58,91.58c31.15-10.15,60.09-26.07,89.67-39.8,40.92-19,84.73-46,130.83-49.67,36.26-2.85,70.9,9.42,98.6,31.56,31.77,25.39,62.32,62,103.63,73,40.44,10.79,81.35-6.69,119.13-24.28s75.16-39,116.92-43.05c59.73-5.85,113.28,22.88,168.9,38.84,30.2,8.66,59,6.17,87.09-7.5,22.43-10.89,48-26.93,60.65-49.24V0Z"
        opacity=".5"
        class="shape-fill"></path>
      <path
        d="M0,0V5.63C149.93,59,314.09,71.32,475.83,42.57c43-7.64,84.23-20.12,127.61-26.46,59-8.63,112.48,12.24,165.56,35.4C827.93,77.22,886,95.24,951.2,90c86.53-7,172.46-45.71,248.8-84.81V0Z"
        class="shape-fill"></path>
    </svg>
  </div>
</footer>

<style>
  /* SVG on top of footer */
  .wave {
    position: absolute;
    top: -90px;
    left: 0;
    width: 100%;
    overflow: hidden;
    line-height: 0;
    transform: rotate(180deg);
  }

  .wave svg {
    position: relative;
    display: block;
    width: calc(100% + 1.3px);
    height: 90px;
    transform: rotateY(180deg);
  }

  .wave .shape-fill {
    fill: #002a33;
  }

  /** For mobile devices **/
  @media (max-width: 47.9rem) {
    .wave svg {
      width: calc(100% + 1.3px);
      height: 32px;
    }

    .wave {
      top: -32px;
    }
  }

  @media screen and (min-width: 0rem) {
    .footer {
      position: relative;
      padding-block: clamp(2rem, 1.4286rem + 2.8571vw, 4rem);
    }

    .footer-title {
      font-size: clamp(1.5rem, 1.2143rem + 1.4286vw, 2.5rem);
      font-weight: 700;
    }

    .footer-subtitle {
      font-size: clamp(1rem, 0.8571rem + 0.7143vw, 1.5rem);
    }

    .footer-img-container {
      width: 50%;
      height: 50%;
      object-fit: cover;
    }

    .footer-socials {
      display: flex;
      gap: 1rem;
    }
  }

  @media screen and (max-width: 62.49rem) {
    .footer {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1rem;
      text-align: center;
    }

    .footer-img-container {
      margin-inline: auto;
      border-radius: 100rem;
      height: 75%;
      width: 75%;
    }
  }

  @media screen and (min-width: 62.5rem) {
    .footer {
      display: grid;
      align-items: flex-end;

      --column-count: 12;
      --margin: 7.5rem;
      column-gap: 1rem;
      row-gap: 1rem;

      grid-template-columns:
        minmax(var(--margin), 1fr)
        repeat(calc(var(--column-count)), minmax(0, 10rem))
        minmax(var(--margin), 1fr);
    }
  }

  .footer-title {
    grid-column: 2 / -2;
  }

  .footer-img-container {
    /* position: absolute; */
  }

  .cta-btn {
    grid-column: 2 / -2;
  }

  .footer picture:has(.footer-logo) {
    grid-column: 2 / span 2;
  }

  .dev-cred {
    grid-column: 4 / 13;
    text-align: center;
    align-self: flex-end;
  }

  .footer-socials {
    grid-column: 13 / -2;
  }

  /* DARK MODE STYLES */
  body.dark-theme .footer {
    background-color: var(--primary-100);
  }

  /* LIGHT MODE STYLES */
</style>
